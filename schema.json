{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://example.org/schemas/study-table.schema.json",
    "title": "Study Table (Object Wrapper with Rows Array)",
    "type": "object",
    "additionalProperties": false,
    "required": ["rows"],
    "properties": {
        "rows": {
            "type": "array",
            "description": "Array of CSV rows. Each item maps 1:1 to a CSV row with the specified headers.",
            "items": {
                "type": "object",
                "additionalProperties": false,
                "required": [
                    "Condition",
                    "Risk Factors",
                    "Etiology",
                    "Pathology",
                    "Pathophysiology",
                    "Clinical Presentation",
                    "Diagnosis / Key Findings",
                    "Histology Key Findings",
                    "Prognosis",
                    "Treatment",
                    "Classic Step 1–Style Question Stem",
                    "Photos from Lecture",
                    "Additional Notes/Important Things",
                    "Mnemonic"
                ],
                "properties": {
                    "Condition": { "type": "string" },
                    "Risk Factors": { "type": "string" },
                    "Etiology": { "type": "string" },
                    "Pathology": { "type": "string" },
                    "Pathophysiology": { "type": "string" },
                    "Clinical Presentation": { "type": "string" },
                    "Diagnosis / Key Findings": { "type": "string" },
                    "Histology Key Findings": { "type": "string" },
                    "Prognosis": { "type": "string" },
                    "Treatment": { "type": "string" },
                    "Classic Step 1–Style Question Stem": { "type": "string" },
                    "Photos from Lecture": { "type": "string" },
                    "Additional Notes/Important Things": { "type": "string" },
                    "Mnemonic": { "type": "string" }
                }
            }
        }
    }
}
