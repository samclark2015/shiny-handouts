# Django Configuration
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=true
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (SQLite for development, PostgreSQL for production)
# DATABASE_URL=sqlite:///data/db.sqlite3
# DATABASE_URL=postgresql://user:password@localhost:5432/handout_generator

# Redis (for Taskiq and caching)
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_URL=redis://localhost:6379/1

# OAuth (Authentik)
OAUTH_URL=https://your-authentik-instance/.well-known/openid-configuration
OAUTH_CLIENT_ID=your-client-id
OAUTH_CLIENT_SECRET=your-client-secret

# OpenAI API
OPENAI_API_KEY=your-openai-api-key

# S3 Storage Configuration (optional - defaults to local filesystem)
# Set USE_S3_STORAGE=true to enable S3 storage for all files
USE_S3_STORAGE=false
S3_BUCKET_NAME=your-bucket-name
S3_REGION=us-east-1
# S3_ENDPOINT_URL=  # Optional: For S3-compatible services (MinIO, DigitalOcean Spaces, etc.)
S3_ACCESS_KEY_ID=your-access-key-id
S3_SECRET_ACCESS_KEY=your-secret-access-key
# Alternative: Use AWS standard environment variables
# AWS_ACCESS_KEY_ID=your-access-key-id
# AWS_SECRET_ACCESS_KEY=your-secret-access-key

# GitHub App (for bug reporting)
GITHUB_APP_ID=your-github-app-id
GITHUB_INSTALLATION_ID=your-github-installation-id
GITHUB_PRIVATE_KEY_B64=your-github-private-key-base64-encoded
REPO=owner/repo
